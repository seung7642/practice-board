<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "mybatis-3-mapper.dtd">

<mapper namespace="com.practice.board.application.board.dao.BoardMapper">
    <select id="getArticle" resultMap="Board">
        SELECT
              idx
            , title
            , content
            , reg_date
            , upd_date
            , hits
        FROM
            BOARD_TBL
    </select>

    <select id="getArticleList" resultMap="Board">
        <![CDATA[
        SELECT
            *
        FROM
            BOARD_TBL
        WHERE idx > 0
        ]]>
    </select>

    <select id="getArticleCount" resultMap="Board">
        <![CDATA[
        SELECT
            COUNT(idx)
        FROM
            BOARD_TBL
        WHERE
            idx > 0
        ]]>
    </select>
</mapper>