<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace에 등록된 클래스와 매핑시킨다. 해당 클래스에선 해당 설정의 값들을 사용할 수 있게됨. -->
<mapper namespace="com.pangtrue.practice.application.board.dao.BoardAttachDao">

    <insert id="insert" parameterType="BoardAttach">
        INSERT INTO BOARD_ATTACH_TBL (
              uuid
            , upload_path
            , file_name
            , file_type
            , board_idx
        ) VALUES (
              #{uuid}
            , #{uploadPath}
            , #{fileName}
            , #{fileType}
            , #{idx}
        )
    </insert>

    <delete id="delete" parameterType="Integer">
        DELETE FROM BOARD_ATTACH_TBL
        WHERE uuid = #{uuid}
    </delete>

    <select id="findByIdx" resultType="BoardAttach">
        SELECT
            *
        FROM
            BOARD_ATTACH_TBL
        WHERE
            board_idx = #{boardIdx}
    </select>

</mapper>